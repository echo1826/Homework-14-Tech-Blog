<section>
    <div class="card col-4 no-padding" data-id={{id}}>
        <a href="/post/{{id}}">
            <div class="card-header">
                <h3>{{title}}</h3>
                <p>{{content}}</p>
            </div>
            <div class="card-body">
                <p>Posted by {{user.username}} on {{createdAt}}</p>
            </div>
        </a>
        <label for="post-title">Post Title:</label>
        <input type="text" id="postTitle">
        <label for="post-content">Post Content:</label>
        <textarea id="postContent"></textarea>
        <button class="updatePost">update post</button>
        <button class="deletePost">delete post</button>
    </div>
</section>