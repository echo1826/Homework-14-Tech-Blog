<section>
    <a href="/post/{{id}}">
        <div class="card col-4 p-0 no-padding" data-id={{id}}>
            <div class="card-header">
                <h3>{{title}}</h3>
                <p>Posted by {{user.username}} on {{createdAt}}</p>
            </div>
            <div class="card-body">
                {{content}}
            </div>
        </div>
    </a>
</section>