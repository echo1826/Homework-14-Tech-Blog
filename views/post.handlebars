<section>
    <div class="card">
        <div class="card-header">
            <h3>{{post.title}}</h3>
            <p>Posted by {{post.user.username}} on {{format_time post.createdAt}}</p>
        </div>
        <div class="card-body">
            {{post.content}}
        </div>
    </div>
</section>



{{#each comments as |comment|}}
<section class="justify-content-center">
    {{>comment}}
</section>
{{/each}}

<section>
    <textarea id="newComment" data-id="{{post.id}}"></textarea>
    <button id="commentBtn">New comment</button>
</section>

<script src="/js/comment.js"></script>