<section>
    <div class="card">
        <div class="card-header">
            <h3>{{{post.title}}}</h3>
            <p>Posted by {{{post.user.username}}} on {{{post.createdAt}}}</p>
        </div>
        <div class="card-body">
            {{{post.content}}}
        </div>
    </div>
</section>

{{#if post.comments.length}}
{{#each post.comments as |comment|}}
<section>
    {{>comment}}
</section>
{{/each}}
{{/if}}
<section>
    
    <textarea></textarea>
    <button>New comment</button>
</section>